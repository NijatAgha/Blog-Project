@model List<CategoryVM>

<div class="container-xxl flex-grow-1 container-p-y" bis_skin_checked="1">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Kateqoriya İdarəetməsi /</span> Kateqoriyalar
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card" bis_skin_checked="1">
        <div class="table-responsive text-nowrap m-5" bis_skin_checked="1">

            <table class="table table-bordered" id="categoriesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>KATEQORİYA ADI</th>
                        <th>YARADILMA TARİXİ</th>
                        <th>MÜƏLLİF</th>
                        <th>VƏZİYYƏT</th>
                        <th>ƏMƏLİYYATLAR</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>KATEQORİYA ADI</th>
                        <th>YARADILMA TARİXİ</th>
                        <th>MÜƏLLİF</th>
                        <th>VƏZİYYƏT</th>
                        <th>ƏMƏLİYYATLAR</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var category in Model)
                    {
                        <tr name="@category.Id">
                            <td>@category.Name</td>
                            <td>@category.CreatedDate.ToShortDateString()</td>
                            <td>@category.CreatedBy</td>
                            <td>@(category.IsDeleted ? "Aktiv Deyil" : "Aktiv")</td>
                            <td>
                                <a class="btn btn-warning btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="UndoDelete" asp-route-categoryId="@category.Id"><i class="bx bx-undo"></i></a>
@*                                <a class="btn btn-danger btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-categoryId="@category.Id"><i class="bx bx-minus-circle"></i></a>
*@
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->
</div>


@section Scripts{
    <script src="~/js/categoryIndex.js" type="application/ecmascript"></script>
}
