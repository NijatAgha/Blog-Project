@model CategoryUpdateVM

<div class="container-xxl flex-grow-1 container-p-y" bis_skin_checked="1">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Kateqoriya İdarəetməsi /</span> Kateqoriyanı Yenilə
    </h4>

    <div class="row" bis_skin_checked="1">
        <div class="col-md-12" bis_skin_checked="1">
            <div class="card mb-4" bis_skin_checked="1">
                <form asp-controller="Category" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body" bis_skin_checked="1">
                        <input type="hidden" asp-for="Id"/>
                        <div class="form-group" bis_skin_checked="1">
                            <label asp-for="Name" class="form-label">KATEQORİYA ADI</label>
                            <input asp-for="Name" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Kateqoriya adını daxil edin." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Name" class="text-danger"></span>

                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Yadda Saxla</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>