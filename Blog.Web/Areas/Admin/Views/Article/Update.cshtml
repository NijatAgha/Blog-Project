@model ArticleUpdateVM


<div class="container-xxl flex-grow-1 container-p-y" bis_skin_checked="1">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Məqalə İdarəetməsi /</span> Məqaləni Yenilə
    </h4>

    <div class="row" bis_skin_checked="1">
        <div class="col-md-12" bis_skin_checked="1">
            <div class="card mb-4" bis_skin_checked="1">
                <h5 class="card-header"></h5>
                <form asp-controller="Article" asp-action="Update" method="post" enctype="multipart/form-data">    
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body" bis_skin_checked="1">
                        <input type="hidden" asp-for="Id"/>
                        <div class="form-group" bis_skin_checked="1">
                            <label asp-for="CategoryId">Kateqoriya</label>
                            <select id="categoryList" class="form-control mb-3" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories,"Id", "Name"))"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-group" bis_skin_checked="1">
                            <label asp-for="Title" class="form-label">Başlıq</label>
                            <input asp-for="Title" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Başlığı daxil edin." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group" bis_skin_checked="1">
                            <label asp-for="Content" class="form-label">Məzmun</label>
                            <textarea asp-for="Content" type="text" class="form-control mb-3" id="defaultFormControlInput" style="min-height:300px" placeholder="Məzmunu daxil edin." aria-describedby="defaultFormControlHelp"> </textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="form-group" bis_skin_checked="1">
                            <label asp-for="Image.FileName" for="defaultFormControlInput" class="form-label d-block">MÖVCUD ŞƏKLİ SEÇİN</label>
                            <img style="height:25em; width:25em" class="mb-3" src="~/images/@Model.Image.FileName" alt="@Model.Title">
                        </div>

                        <div class="form-group" bis_skin_checked="1">
                            <label asp-for="Photo" for="defaultFormControlInput" class="form-label">ŞƏKİL SEÇİN</label>
                            <input asp-for="Photo" type="file" accept="image/*" class="form-control mb-3" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Yadda Saxla</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>