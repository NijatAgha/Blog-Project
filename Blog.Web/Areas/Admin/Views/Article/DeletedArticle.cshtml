@model List<ArticleVM>

<div class="container-xxl flex-grow-1 container-p-y" bis_skin_checked="1">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Zibil Qutusu /</span> Məqalələr
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card" bis_skin_checked="1">
        <div class="table-responsive text-nowrap m-5" bis_skin_checked="1">

            <table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>MƏQALƏ BAŞLIĞI</th>
                        <th>KATEQORİYA ADI</th>
                        <th>YAZILMA TARİXİ</th>
                        <th>MÜƏLLİF</th>
                        <th>VƏZİYYƏT</th>
                        <th>ƏMƏLİYYATLAR</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>MƏQALƏ BAŞLIĞI</th>
                        <th>KATEQORİYA ADI</th>
                        <th>YAZILMA TARİXİ</th>
                        <th>MÜƏLLİF</th>
                        <th>VƏZİYYƏT</th>
                        <th>ƏMƏLİYYATLAR</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var article in Model)
                    {
                        <tr name="@article.Id">
                            <td>@article.Title</td>
                            <td>@article.Category.Name</td>
                            <td>@article.CreatedDate.ToShortDateString()</td>
                            <td>@article.CreatedBy</td>
                            <td>@(article.IsDeleted ? "Aktiv Deyil" : "Aktiv")</td>
                            <td>
                                <a class="btn btn-warning btn-sm" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="UndoDelete" asp-route-articleId="@article.Id"><i class="bx bx-undo"></i></a>
@*                                <a class="btn btn-danger btn-sm" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="Delete" asp-route-articleId="@article.Id"><i class="bx bx-minus-circle"></i></a>
*@
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->
</div>


@section Scripts{
    <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}