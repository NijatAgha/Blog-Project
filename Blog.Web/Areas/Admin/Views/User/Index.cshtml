@model List<UserVM>


<div class="container-xxl flex-grow-1 container-p-y" bis_skin_checked="1">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">İstifadəçi İdarəetməsi /</span> İstifadəçilər
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card" bis_skin_checked="1">
        <div class="table-responsive text-nowrap m-5" bis_skin_checked="1">

            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="User" asp-action="Add">
                İstifadəçi Əlavə Et <i class="bx bx-plus"></i>
            </a>

            <table class="table table-bordered" id="usersTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>AD</th>
                        <th>SOYAD</th>
                        <th>E-POÇT</th>
                        <th>TELEFON NÖMRƏSİ</th>
                        <th>ROL</th>
                        <th>E-POÇT TƏSDİQLƏMƏSİ</th>
                        <th>BAĞLANTI XƏTALARI</th>
                        <th>ƏMƏLİYYATLAR</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>AD</th>
                        <th>SOYAD</th>
                        <th>E-POÇT</th>
                        <th>TELEFON NÖMRƏSİ</th>
                        <th>ROL</th>
                        <th>E-POÇT TƏSDİQLƏMƏSİ</th>
                        <th>BAĞLANTI XƏTALARI</th>
                        <th>ƏMƏLİYYATLAR</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var user in Model)
                    {
                        <tr name="@user.Id">
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Role</td>
                            <td>@(user.EmailConfirmed ? "Təsdiqlənmiş" : "Təsdiqlənməmiş")</td>
                            <td>@user.AccessFailedCount</td>
                            <td>
                                <a class="btn btn-primary btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Update" asp-route-userId="@user.Id"><i class="bx bx-edit"></i></a>
                                <a class="btn btn-danger btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-userId="@user.Id"><i class="bx bx-minus-circle"></i></a>

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->
</div>


@section Scripts{
    <script src="~/js/userIndex.js" type="application/ecmascript"></script>
}