@model UserUpdateVM

<div class="container-xxl flex-grow-1 container-p-y" bis_skin_checked="1">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">İstifaçi İdarəetməsi /</span> İstifadəçini Yenilə
    </h4>

    <div class="row" bis_skin_checked="1">
        <div class="col-md-12" bis_skin_checked="1">
            <div class="card mb-4" bis_skin_checked="1">
                <form asp-controller="User" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" style="color:red"></div>
                    <div class="card-body" bis_skin_checked="1">

                        <input type="hidden" asp-for="Id"/>

                        <div class="form-group" bis_skin_checked="1">
                            <label asp-for="FirstName" class="form-label">İSTİFADƏÇİNİN ADI</label>
                            <input asp-for="FirstName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="İstifadəçinin adını daxil edin." aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group" bis_skin_checked="1">
                            <label asp-for="LastName" class="form-label">İSTİFADƏÇİNİN SOYADI</label>
                            <input asp-for="LastName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="İstifadəçinin soyadını daxil edin." aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group" bis_skin_checked="1">
                            <label asp-for="Email" class="form-label">İSTİFADƏÇİNİN E-POÇT ADRESİ</label>
                            <input asp-for="Email" type="email" class="form-control mb-3" id="defaultFormControlInput" placeholder="İstifadəçinin e-poçt adresini daxil edin." aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group" bis_skin_checked="1">
                            <label asp-for="PhoneNumber" class="form-label">İSTİFADƏÇİNİN TELEFON NÖMRƏSİ</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control mb-3" id="defaultFormControlInput" placeholder="İstifadəçinin telefon nömrəsini daxil edin." aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="form-group" bis_skin_checked="1">
                            <label asp-for="RoleId" class="form-label">İSTİFADƏÇİNİN ROLU</label>
                            <select asp-for="RoleId" class="form-control mb-3" asp-items="@(new SelectList(Model.Roles, "Id", "Name"))"></select>
                        </div>
                       
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Yadda Saxla</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>